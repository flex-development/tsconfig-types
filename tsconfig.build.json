{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "customConditions": ["tsconfig-types", "import", "node"],
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "isolatedDeclarations": true,
    "noEmitOnError": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": false,
    "sourceMap": false,
    "target": "es2023"
  },
  "exclude": [],
  "extends": "./tsconfig.json",
  "include": ["./dist/*", "./src/*"]
}
